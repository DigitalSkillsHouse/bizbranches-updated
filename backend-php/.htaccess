# Disable directory listing so /api/ does not show folder contents
Options -Indexes
DirectoryIndex index.php

RewriteEngine On

# Handle CORS preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ index.php [QSA,L]

# If the request is for an existing file, serve it; otherwise route through index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php [QSA,L]

# PHP settings
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
    php_value max_execution_time 120
    php_value memory_limit 512M
</IfModule>

# Security: block direct access to sensitive files/directories
<FilesMatch "^\.env|composer\.(json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>

RewriteRule ^config/ - [F,L]
RewriteRule ^lib/ - [F,L]
RewriteRule ^migrations/ - [F,L]
RewriteRule ^scripts/ - [F,L]
RewriteRule ^vendor/ - [F,L]

# Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
</IfModule>
