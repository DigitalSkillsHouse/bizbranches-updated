# Disable directory listing so /api/ does not show folder contents
Options -Indexes
DirectoryIndex index.php

RewriteEngine On

# Handle CORS preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ index.php [QSA,L]

# If the request is for an existing file, serve it; otherwise route through index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ index.php [QSA,L]

# PHP settings â€” businesses.json can be ~50MB; allow large uploads and long execution for import
<IfModule mod_php.c>
    php_value upload_max_filesize 128M
    php_value post_max_size 140M
    php_value max_execution_time 600
    php_value memory_limit 1024M
    php_value max_input_time 600
</IfModule>
<IfModule mod_lsapi.c>
    php_value upload_max_filesize 128M
    php_value post_max_size 140M
    php_value max_execution_time 600
    php_value memory_limit 1024M
    php_value max_input_time 600
</IfModule>

# Security: block direct access to sensitive files/directories
<FilesMatch "^\.env|composer\.(json|lock)|error_log$">
    Order allow,deny
    Deny from all
</FilesMatch>

RewriteRule ^config/ - [F,L]
RewriteRule ^lib/ - [F,L]
RewriteRule ^data/ - [F,L]
RewriteRule ^migrations/ - [F,L]
RewriteRule ^scripts/ - [F,L]
RewriteRule ^vendor/ - [F,L]

# Gzip
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
</IfModule>
