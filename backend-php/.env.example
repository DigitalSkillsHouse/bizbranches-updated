# ===========================================
# BizBranches PHP Backend - Environment Variables
# Copy to .env and fill in your values
#
# cPanel: Create this file in your API subdomain root
# e.g. ~/api.bizbranches.pk/.env
# ===========================================

# ---- MySQL Database (cPanel phpMyAdmin) ----
# cPanel format: cpanelusername_dbname
DB_HOST=localhost
DB_PORT=3306
DB_NAME=digitalskills_bizbranchespk
DB_USER=digitalskills_bizuser
DB_PASS=your_db_password

# ---- Server ----
APP_ENV=production
# DISABLE_CACHE=1
# Set DISABLE_CACHE=1 or APP_ENV=testing (or local) to send no-store on API responses (no browser/CDN cache)

# ---- Cloudinary (image uploads) ----
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ---- Admin ----
ADMIN_SECRET=your_admin_secret

# ---- Email (SMTP) ----
# cPanel provides built-in SMTP: mail.yourdomain.com
SMTP_HOST=mail.bizbranches.pk
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=support@bizbranches.pk
SMTP_PASS=your_email_password
EMAIL_FROM=support@bizbranches.pk
EMAIL_FROM_NAME=BizBranches Support
EMAIL_REPLY_TO=
SUPPORT_EMAIL=support@bizbranches.pk

# ---- Site URLs (same domain for frontend + backend on cPanel) ----
SITE_URL=https://bizbranches.pk
FRONTEND_URL=https://bizbranches.pk
NEXT_PUBLIC_SITE_URL=https://bizbranches.pk

# ---- Leopards Courier API (optional, for Pakistan cities) ----
LEOPARDS_API_BASE_URL=https://merchantapi.leopardscourier.com/api
LEOPARDS_API_KEY=your_leopards_api_key
LEOPARDS_API_PASSWORD=your_leopards_api_password

# ---- Geocoding (optional) ----
# GOOGLE_GEOCODING_API_KEY=your_google_geocoding_key
